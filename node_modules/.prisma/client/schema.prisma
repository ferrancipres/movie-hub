// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_URI")
}

// Tenemos que migrar los modelos de Mongoose a Prisma
// CUIDADO
// Tenemos que mapear los 'nombre de la key' > Type > Decorators
//@id > Sirve para decir que este va a ser nuestro primary key para hacer  querys y relaciones
//@default(auto()) > Porque lo crea Mongoautomaticamente

// npx prisma format  
model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String
  password  String
  movies    movie[]

  //PRUEBA
  @@map("users")
}

model movie {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  poster    String
  //CUIDADO ERROR
  score     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?  @db.ObjectId
  user      user?    @relation(fields: [userId], references: [id])
  genres    genre[]

  //PRUEBA
  @@map("movies")
}

model genre {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  movieId   String?  @db.ObjectId
  movie     movie?   @relation(fields: [movieId], references: [id])

  //PRUEBA
  @@map("genres")
}
