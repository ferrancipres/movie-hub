generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_URI")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String   @unique
  password String
  movies   Movies[]
}

model Movies {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  score        String
  genres       Genres[]
  poster_image String
  userId       String?  @db.ObjectId
  User         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Genres {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  name    String  @unique
  movieId String? @db.ObjectId
  Movies  Movies? @relation(fields: [movieId], references: [id])
}
