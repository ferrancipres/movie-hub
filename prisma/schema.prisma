// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_URI")
}

// Tenemos que migrar los modelos de Mongoose a Prisma
// CUIDADO
// Tenemos que mapear los 'nombre de la key' > Type > Decorators
//@id > Sirve para decir que este va a ser nuestro primary key para hacer  querys y relaciones
//@default(auto()) > Porque lo crea Mongoautomaticamente

// npx prisma format  
model user {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String
  // movies    movies[]
}

